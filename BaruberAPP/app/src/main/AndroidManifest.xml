<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- NECESARIO PARA RETROFIT / OKHTTP -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permisos para acceder a imágenes -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- ✅ Permiso de notificaciones Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Baruber">

        <!-- SplashActivity -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Baruber">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Baruber" />

        <!-- RegisterActivity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Baruber" />

        <!-- MainActivity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Baruber" />

        <!-- BarberoDetailActivity -->
        <activity
            android:name=".ui.barberos.BarberoDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_barbero_detail"
            android:theme="@style/Theme.Baruber" />

        <!-- EditarPerfilActivity -->
        <activity
            android:name=".ui.perfil.EditarPerfilActivity"
            android:exported="false"
            android:label="@string/title_activity_editar_perfil"
            android:theme="@style/Theme.Baruber" />

        <!-- CrearReservaActivity -->
        <activity
            android:name=".ui.reservas.CrearReservaActivity"
            android:exported="false"
            android:label="@string/title_activity_crear_reserva"
            android:theme="@style/Theme.Baruber" />

        <!-- DetalleReservaActivity -->
        <activity
            android:name=".ui.reservas.DetalleReservaActivity"
            android:exported="false"
            android:label="@string/title_activity_detalle_reserva"
            android:theme="@style/Theme.Baruber" />

        <!-- ✅ SERVICIO FCM (obligatorio para recibir notificaciones) -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
